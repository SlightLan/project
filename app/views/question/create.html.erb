<head>
  <style type="text/css">
    .main {
      width: 960px;
      margin: 0 auto;
    }
    .header{
      display:flex;
      justify-content: space-between;
      background-color:#66CCFF;
      line-height: 40px;
      margin-bottom: 40px;
    }
    .h-box{
      padding:0 20px;
    }
    .input-width-max > input {
      width: 100%;
      background-color:#efefef;
    }

    .textarea-width-max > textarea {
      width: 100%;
    }

    .textarea-height-400 > textarea {
      height: 400px;
      background-color: #efefef;
    }

    .submit-button > input {
      display: block;
      width: 400px;
      height: 40px;
      background-color: blue;
      font-size: 24px;
      color: white;
      margin: 0 auto;
    }

    .text-center {
      text-align: center;
    }

    .font-bold {
      font-weight: bold;
    }

    .f-22 {
      font-size: 22px;
    }
  </style>
</head>
<body>
<div class="main">
<div class="header">
  <div class="h-box">
    <strong>
      <%= link_to '首页' , root_path %>
    </strong>
  </div>
  <div class="h-box">
    <strong>The current user is:</strong>
    <%= link_to @user.email , show_user_path %>
  </div>
  <div class="h-box">
    <%= link_to "Log out" , destroy_user_session_path, :method => :delete %>  
  </div>
</div>

<div class="section">
  
    <h1 class="text-center font-bold">写下你的问题</h1>
    <p class="text-center f-22">描述精确的问题更容易得到解答</p>
    <% @user = current_user %>
    <%= form_for :question do |f| %>
      <%= f.label :title %>
      <div class="input-width-max">
        <%= f.text_field :title %>
      </div>
      <p>
        <%= f.label :content %><br>
      <div class="textarea-width-max textarea-height-400">
        <%= f.text_area :content %>
      </div>
      </p>
      <%= f.hidden_field :asker, :value => @user.email %>
      <div class="submit-button">
        <%= f.submit :提交问题 %>
      </div>
    <% end %>
  </div>
</div>



</body>

