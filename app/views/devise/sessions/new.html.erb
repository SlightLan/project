<head>
  <style type="text/css">
    .main {
      width: 960px;
      margin: 0 auto;
      text-align: center;
      background-color: #efefef;
      padding-bottom: 100px;
    }
    .actions>input{
      background-color: #0099ff;
      width:200px;
    }
    .box{
      padding:30px;
      width:300px;
      margin:0 auto;
      background-color: #c4e1ff;
      border-radius: 50px;
    }
  </style>
</head>
<body>
<div class="main">
  <h2 style="line-height:200px;">Log in</h2>

  <div class="box">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :用户名 %><br/>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :密码 %><br/>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
</body>
